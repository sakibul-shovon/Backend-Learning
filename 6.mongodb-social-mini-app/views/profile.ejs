<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-xl shadow-md p-8 relative">
      <form action="/logout" method="get" class="absolute top-4 right-4">
        <button
          type="submit"
          class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 transition font-medium shadow-sm"
        >
          Logout
        </button>
      </form>
      <div class="flex flex-col items-center mb-6">
        <div class="w-24 h-24 rounded-full bg-blue-200 overflow-hidden">
          <% if (user.profilepic && user.profilepic !== 'default.jpg') { %>
            <img 
              src="/images/upload/<%= user.profilepic %>" 
              alt="Profile Picture"
              class="w-full h-full object-cover"
            >
          <% } else { %>
            <img 
              src="/images/upload/default.jpg" 
              alt="Default Profile Picture"
              class="w-full h-full object-cover"
            >
          <% } %>
        </div>
        <!-- Add this form below the profile picture div -->
        <form action="/upload-profile-pic" method="post" enctype="multipart/form-data" class="mt-4 mb-4">
          <input 
            type="file" 
            name="profilepic" 
            accept="image/*"
            class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
          >
          <button 
            type="submit" 
            class="mt-2 px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 transition"
          >
            Update Profile Picture
          </button>
        </form>
        <h2 class="text-xl font-semibold text-gray-800 mb-1 text-center">
          Hello, <span class="text-blue-600"><%= user.name %></span>
        </h2>
        <p class="text-center text-gray-500 mb-2 text-sm"><%= user.email %></p>
      </div>
      <p class="text-center text-gray-600 mb-6">
        Welcome to your profile. You can create a post below.
      </p>
      <form action="/posts" method="post" class="space-y-4">
        <div>
          <textarea
            placeholder="What's on your mind?"
            name="content"
            rows="4"
            class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-200 resize-none bg-gray-50"
            required
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition font-semibold"
        >
          Create Post
        </button>
      </form>

      <div class="mt-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">All Posts</h3>
        <div class="space-y-4">
          <% allPosts.forEach(function(post) { %>
            <div class="bg-gray-50 rounded-lg shadow p-4">
              <div class="flex items-center mb-2">
                <div class="w-8 h-8 rounded-full bg-blue-200 flex items-center justify-center mr-2">
                  <span class="text-blue-700 font-bold"><%= post.user.name ? post.user.name[0].toUpperCase() : "U" %></span>
                </div>
                <h4 class="font-semibold text-gray-700"><%= post.user.name %></h4>
                <% if (post.user._id.toString() === user._id.toString()) { %>
                  <span class="ml-2 text-xs bg-blue-100 text-blue-600 px-2 py-1 rounded">Your post</span>
                <% } %>
              </div>
              <p class="text-gray-700 mb-3"><%= post.content %></p>
              <small><%= post.likes.length %> Likes</small>

              <div class="flex space-x-4">
                <a href="/like/<%= post._id %>" class="text-blue-500 hover:underline font-medium">
                  <%= post.likes.includes(user._id) ? "Unlike" : "Like" %>
                </a>
                <% if (post.user._id.toString() === user._id.toString()) { %>
                  <a href="/edit/<%= post._id %>" class="text-blue-500 hover:underline font-medium">Edit</a>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
