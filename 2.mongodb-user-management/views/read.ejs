<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="flex justify-between mb-10">
            <a href="/">Go Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex gap-5 flex-wrap">
            <% allUsers.forEach(user => { %>
                <div class="user max-w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-500"><img src="<%= user.image %>" alt="<%= user.name %>'s profile picture" class="w-full h-full object-cover rounded-lg"></div>
                    <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3 mt-10">
                        <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-500" href="/delete/<%= user._id %>">Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
